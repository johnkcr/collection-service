{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",

        "lib": ["ES2020"],
        
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "experimentalDecorators": true,
        
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        
        "declaration": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,

        "rootDir": "./src",
        "outDir": "dist",
        "baseUrl": "./src",
    },

    "include": ["src/"]
}